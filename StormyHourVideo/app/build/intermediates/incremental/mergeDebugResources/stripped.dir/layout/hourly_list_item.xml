<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
    
                 
                       
                                                                  
           
<RelativeLayout
    android:id="@+id/hourlyListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    tools:background="@color/powder_blue" android:tag="layout/hourly_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingEnd="6dp"
        android:tag="binding_1"                    
        android:textSize="20sp"
        tools:text="12 PM" />

    <ImageView
        android:id="@+id/weatherIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/timeLabel"
        android:layout_toEndOf="@id/timeLabel"
        android:paddingEnd="6dp"
        android:tag="binding_2"           
        android:src="@drawable/rain"/>

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/weatherIconImageView"
        android:layout_toRightOf="@id/weatherIconImageView"
        android:tag="binding_3"                                       
        android:textSize="20sp"
        tools:text="100" />

    <ImageView
        android:id="@+id/tempDegreeImageView"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/temperatureLabel"
        android:layout_toRightOf="@id/temperatureLabel"
        android:scaleType="fitStart"
        android:paddingEnd="6dp"
        android:src="@drawable/degree" />

    <TextView
        android:id="@+id/realFealTempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tempDegreeImageView"
        android:layout_toRightOf="@id/tempDegreeImageView"
        android:paddingEnd="6dp"
        android:text="@string/real_feel"/>

    <TextView
        android:id="@+id/realFealTempValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/realFealTempLabel"
        android:layout_toRightOf="@id/realFealTempLabel"
        android:tag="binding_4"                                        
        android:textSize="20sp"
        tools:text="100" />

    <ImageView
        android:id="@+id/realFeelTempDegree"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/realFealTempValue"
        android:layout_toRightOf="@id/realFealTempValue"
        android:scaleType="fitStart"
        android:paddingEnd="6dp"
        android:src="@drawable/degree" />

    <ImageView
        android:id="@+id/precipImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/realFeelTempDegree"
        android:layout_toRightOf="@id/realFeelTempDegree"
        android:paddingEnd="6dp"
        android:src="@drawable/rain_drop" />

    <TextView
        android:id="@+id/precipChanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/precipImage"
        android:layout_toRightOf="@id/precipImage"
        android:tag="binding_5"                                     
        android:textSize="20sp"
        tools:text="20%"  />



</RelativeLayout>
         